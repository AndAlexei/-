.youtube
  overflow hidden
  cursor pointer
  &__thumb
    opacity .7
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    margin auto
    width 100%
    max-width 100%
    height auto
  &__play
    position absolute
    height 77px
    top 50%
    left 50%
    margin-top -38px
    margin-left -38px
    width 77px
    background-image url('data:image/png;base64,')
    background-image url('data:image/png;base64,')
    background-repeat no-repeat
    background-size cover
